<div class="row ">
    <br /><br />
    <div class="col-lg-4 col-lg-offset-1" style="background-color:lightyellow; border-radius:20px; opacity:0.7">
        <div class="form-horizontal" style="font-family:'Hobo Std'; font-size:large">
            <br /><br />
            <div style="color:brown; font-size:xx-large">  @it.name </div><hr />
            <b style="color:brown">Price:</b>  @(it.price)/- <b style="color:red">PKR</b><br />
            <b style="color:brown">Descriptions:</b>  @it.desc <br />
            <input type="hidden" id="idi" value="@it.Id" />
        </div>
        <hr />
        <br />


